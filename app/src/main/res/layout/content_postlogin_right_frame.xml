<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:focusableInTouchMode="true"
    tools:showIn="@layout/postlogin_right_frame"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:focusable="true"
    android:layout_marginBottom="40dp"
    android:id="@+id/rightFrameConstraint">

    <android.support.v7.widget.SearchView
        app:iconifiedByDefault="false"
        android:id="@+id/search"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:queryHint="Search product here"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/rightGuide"/>

    <android.support.v7.widget.RecyclerView
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="@id/rightGuide"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/search"
        android:layout_margin="3dp"
        android:id="@+id/listProducts"
        android:layout_width="0dp"
        android:layout_height="0dp"/>

    <android.support.constraint.Guideline
        android:id="@+id/rightGuide"
        app:layout_constraintGuide_percent="0.8"
        android:orientation="vertical"
        android:layout_width="1dp"
        android:layout_height="match_parent" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/listDepartments"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/rightGuide"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        android:layout_height="0dp"/>


</android.support.constraint.ConstraintLayout>