<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/firstLabel"
        android:textSize="17sp"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Column Max Count"/>

    <View
        android:id="@+id/topSeparator"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorLtGrey" />

    <TextView
        android:textSize="17sp"
        android:layout_margin="5dp"
        android:layout_gravity="center"
        android:text="Main Printer"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:textSize="17sp"
        android:layout_margin="5dp"
        android:layout_gravity="center"
        android:text="50"
        android:id="@+id/seekbarValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <SeekBar
        android:id="@+id/seekbarProgress"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="50"
        />

    <TextView
        android:textSize="17sp"
        android:layout_margin="5dp"
        android:layout_gravity="center"
        android:text="Kitchen Printer"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:textSize="17sp"
        android:layout_margin="5dp"
        android:layout_gravity="center"
        android:text="50"
        android:id="@+id/seekbarValueKitchen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <SeekBar
        android:id="@+id/seekbarProgressKitchen"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="50"
        />

    <TextView
        android:textSize="17sp"
        android:layout_margin="5dp"
        android:layout_gravity="center"
        android:text="Roomboy Printer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:textSize="17sp"
        android:layout_margin="5dp"
        android:layout_gravity="center"
        android:text="50"
        android:id="@+id/seekbarValueRb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <SeekBar
        android:id="@+id/seekbarProgressRb"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="50"
        />

    <TextView
        android:textSize="17sp"
        android:layout_margin="5dp"
        android:layout_gravity="center"
        android:text="5"
        android:id="@+id/seerkbarValueRoomGrid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <SeekBar
        android:id="@+id/seekbarProgressGrid"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="15"
        />

</LinearLayout>