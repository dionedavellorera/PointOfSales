<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="100dp"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="5dp"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="3dp"
    android:id="@+id/rootView"

    >
    <RelativeLayout
        android:id="@+id/rel"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/frameBadge"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="7dp"
            android:layout_marginRight="7dp"
            android:background="@drawable/image_scrim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            <ImageView
                android:src="@mipmap/ic_launcher"
                android:layout_alignParentLeft="true"
                android:id="@+id/badge"
                android:layout_width="20dp"
                android:layout_height="20dp" />
        </FrameLayout>

        <TextView
            android:layout_marginLeft="8dp"
            android:visibility="visible"
            android:id="@+id/rmType"

            android:ellipsize="end"
            android:gravity="center"
            android:layout_below="@id/frameBadge"
            android:padding="3dp"
            android:text="1100"
            android:textSize="8sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:paddingTop="7dp"
            android:background="@drawable/text_scrim_light"
            android:layout_centerInParent="true"
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Product Name"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            android:textSize="11sp" />


        <TextView
            android:layout_centerHorizontal="true"
            android:visibility="gone"
            android:id="@+id/orderCount"
            android:maxLength="3"
            android:ellipsize="end"
            android:gravity="center"
            android:layout_below="@id/name"
            android:padding="3dp"
            android:text="100"
            android:background="@drawable/square_round"
            android:layout_width="40dp"
            android:layout_height="wrap_content" />




        <TextView
            android:textSize="9sp"
            android:background="@drawable/text_scrim_light"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:id="@+id/roomPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:padding="5dp"
            android:text="12:12"
            android:textStyle="bold"  />

        <TextView
            android:textSize="8sp"
            android:gravity="center"
            android:id="@+id/timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:ellipsize="end"
            android:maxLines="1"
            android:padding="10dp"
            android:text="Mar 3 10:45 AM"
            android:textColor="@color/colorAccent" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>