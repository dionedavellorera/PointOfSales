        android:layout_height="wrap_content" />



    <TextView
        android:textStyle="bold"
        android:layout_margin="20dp"
        android:layout_below="@id/permitNumber"
        android:text="berd"
        android:gravity="center"
        android:id="@+id/roomNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
