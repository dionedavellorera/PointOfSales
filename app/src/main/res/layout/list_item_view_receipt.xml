        android:text="berd"
        android:gravity="center"
        android:id="@+id/minNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_below="@id/minNumber"
        android:text="berd"
        android:gravity="center"
        android:id="@+id/serial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


