<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:visibility="gone"
        android:id="@+id/notItems"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/guideTotal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="No items selected"/>

    <TextView
        android:id="@+id/header"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:padding="10dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:background="@color/lightgrey"
        android:textColor="@color/light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TABLE 1"/>
    <android.support.v7.widget.RecyclerView
        android:textColor="@color/light"
        android:id="@+id/listCheckoutItems"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/guideTotal"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

    <android.support.constraint.Guideline
        android:id="@+id/guideTotal"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintGuide_percent="0.60"/>

    <TextView
        android:textColor="@color/colorBlack"
        android:padding="5dp"
        android:id="@+id/discountLabel"
        android:text="Discount"
        app:layout_constraintTop_toBottomOf="@id/guideTotal"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

    <TextView
        android:textColor="@color/colorBlack"
        android:padding="5dp"
        app:layout_constraintTop_toBottomOf="@id/discountLabel"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/subTotalLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sub total"/>

    <TextView
        android:textColor="@color/colorBlack"
        android:padding="5dp"
        app:layout_constraintTop_toBottomOf="@id/subTotalLabel"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/taxLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tax(12%)"/>
    <TextView
        android:textSize="18sp"
        android:textStyle="bold"
        android:background="@color/lightgrey"
        android:textColor="@color/light"
        android:id="@+id/total"
        android:padding="5dp"
        android:text="TOTAL"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/taxLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.constraint.Guideline
        android:id="@+id/guideLast"
        app:layout_constraintGuide_percent="0.9"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <android.support.constraint.Guideline
        android:id="@+id/guideBottom"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.8"/>

    <android.support.v7.widget.RecyclerView
        android:visibility="gone"
        android:id="@+id/listCategory"
        app:layout_constraintTop_toBottomOf="@id/guideBottom"
        app:layout_constraintBottom_toTopOf="@id/guideBottomSecond"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>

    <android.support.constraint.Guideline
        android:id="@+id/guideBottomSecond"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.9"/>

    <android.support.v7.widget.RecyclerView
        android:visibility="gone"
        android:id="@+id/listSubCategory"
        app:layout_constraintTop_toBottomOf="@id/guideBottomSecond"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>


    <android.support.v7.widget.RecyclerView
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guideBottom"
        android:id="@+id/listButtons"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
</android.support.constraint.ConstraintLayout>